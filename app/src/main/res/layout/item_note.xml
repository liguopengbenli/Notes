<?xml version="1.0" encoding="utf-8"?>
<com.lig.intermediate.notes.views.NoteView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_note_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageButton"
        android:layout_marginStart="@dimen/item_margin_default"
        android:layout_marginTop="@dimen/item_margin_default"
        />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="@dimen/icon_img_size"
        android:layout_height="@dimen/icon_img_size"
        android:src="@drawable/ic_delete"
        android:background="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_note_text"
        app:layout_constraintBottom_toBottomOf="@id/item_note_text"
        android:layout_marginEnd="@dimen/item_margin_default"
        />

</com.lig.intermediate.notes.views.NoteView>
